<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPageActivity"
    android:background="@drawable/default_background">

    <TextView
        android:id="@+id/user_name_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:background="@color/bright_orange"
        android:textAlignment="center"
        android:padding="15sp"
        android:textStyle="bold"
        android:text="Welcome"/>

    <ImageButton
        android:id="@+id/signout_button"
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:background="@drawable/signout_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10sp"
        />

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_holder"
        android:orientation="horizontal"
        android:layout_marginTop="60sp">

        <ImageButton
            android:id="@+id/user_details"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/profile_button_selector"
            android:layout_margin="45sp"
           />

        <ImageButton
            android:id="@+id/alert_settings"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/settings_button_selector"
            android:layout_margin="45sp"
            />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat

        android:id="@+id/camera_switch"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_below="@id/linear_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/camera_setting_unpressed"
        android:checked="true"
        android:paddingTop="50sp"
        android:paddingRight="30sp"
        android:paddingLeft="20sp"
        android:switchMinWidth="50sp"
        android:text="Front"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textOff="Rear"
        android:textOn="Front"
        android:textSize="15sp"
        android:textStyle="bold"
        android:theme="@style/SCBSwitch"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="Start Monitoring"
        android:textColor="@color/black"
        android:layout_below="@id/camera_switch"
        android:textSize="15sp"
        android:textStyle="bold"/>






</RelativeLayout>